#!/bin/bash

## Description: Start the DDEV environment with helpful output
## Usage: start-project
## Example: "ddev start-project"

echo "Starting DDEV environment for SDC Webform project..."
echo "This will start nginx to serve your static HTML files."
echo ""

# Start DDEV normally
ddev start

echo ""
echo "✅ DDEV environment started successfully!"
echo "🌐 Your site is available at: https://sdc-webform.ddev.site"
echo "📁 Main form: https://sdc-webform.ddev.site/sdc_bidrequest.html"
echo ""
echo "To stop the environment, run: ddev stop"
echo "To view logs, run: ddev logs"
